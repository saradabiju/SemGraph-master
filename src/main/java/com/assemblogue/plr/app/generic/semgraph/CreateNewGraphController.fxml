<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.assemblogue.plr.app.generic.semgraph.CreateNewGraphController">

  <stylesheets>
    <URL value="@app.css" />
  </stylesheets>

  <top>
	<VBox spacing="5">
      <Label text="" />
	</VBox>
  </top>

  <center>
	<VBox spacing="5">
	  <children>
		<VBox spacing="20">
		  <HBox alignment="CENTER" spacing="10">
			<Label text = "%graph.create.dlg.name" prefWidth="60" />
			<TextField fx:id="graphName" prefWidth="300" promptText= "%graph.create.dlg.name.def" focusTraversable="false" />
		  </HBox>
		</VBox>
	  </children>
	</VBox>
  </center>

  <bottom>
	<VBox spacing="10">
        <HBox alignment="CENTER" spacing="20">
          <Button fx:id="graphCancel" text="%btn.cancel" focusTraversable="false" />
          <Button fx:id="graphCreate" text="%btn.create" focusTraversable="false" />
		</HBox>
        <HBox alignment="CENTER">
		</HBox>
	</VBox>
  </bottom>
</BorderPane>
